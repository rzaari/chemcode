<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="jumbotron text-center">
			<h1><i class="fa fa-code"></i> Chem Code</h1>
			<br>
			<h3>search and share chemistry code</h3>


				<div class="row">
					<div class="col-md-10 col-md-offset-1">
						<div class="col-md-6">
							<h3> Search Code</h3>
							<%= link_to "Search Code", root_path, class: 'btn btn-success navbar-btn' %>
						</div>
						<div class="col-md-6">
							<h3> Post Code</h3>
							<%= link_to "Post Code", submit_path, class: 'btn btn-warning navbar-btn', method: :get %>
						</div>
					</div>
				</div>
		</div>
	</div>
</div>

<div class="row"> 
	<div class="col-md-10 col-md-offset-1">
	       <% @allposts.each do |micropost| %>

	       <div class="panel panel-default">
	       	  <div class="panel-heading">
		         <h3 class="panel-title">
		        	<%= micropost.heading %>
		         </h3>
		     </div>
			         <div class="panel-body ">
			        	<samp><%= simple_format(micropost.content) %></samp>
			         </div>
		     	

		         <div class="panel-footer">
		         	<span class="glyphicon glyphicon-user"></span>
		         		<em><%= micropost.user.username %></em>
		         	<span class= "pull-right" >
		         		<span class="glyphicon glyphicon-calendar"></span>
		         		<%= micropost.user.created_at.strftime("%B %d, %Y") %> 
		         	</span>
		         </div>
		         </div>


	       <% end %>
	    </div>
	</div>
</div>
