<div class="row">
		<div class="jumbotron text-center">
		<h1><i class="fa fa-code"></i> Chem Code</h1>
		<br>
		<h3>Search, save and share chemistry code</h3>
		<h3>GAMESS, Molpro, Gaussian</h3>
		</div>
</div>

<div class="row"> 
	<div class="col-md-10 col-md-offset-1">
	    <ul class="list-group">
	       <% @allposts.each do |micropost| %>
	         <li class="list-group-item">
		         <h3 class="list-group-item-heading">
		        	<%= micropost.heading %>
		         </h3>
		         <div class="col-md-12">
			         <p class="list-group-item-text">
			        	<%= simple_format(micropost.content) %>
			         </p>
		     	</div>

		         <div class="row">
		         	<div class="col-md-6"><em><%= micropost.user.username %></em> </div>
		         	<div class="col-md-6"><span class= "pull-right" >submitted: <%= micropost.user.created_at.strftime("%B %d, %Y") %> </span></div>
		         </div>

	         </li>
	       <% end %>
	    </ul>
	</div>
</div>
