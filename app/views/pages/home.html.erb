<div class="row">
		<div class="jumbotron text-center">
		<h1><i class="fa fa-code"></i> Chem Code</h1>
		<br>
		<h3>Search, save and share chemistry code</h3>
		<h3>GAMESS, Molpro, Gaussian</h3>
		</div>
</div>

<div class="row"> 
	<div class="col-md-10 col-md-offset-1">
	       <% @allposts.each do |micropost| %>

	       <div class="panel panel-default">
	       	  <div class="panel-heading">
		         <h3 class="panel-title">
		        	<%= micropost.heading %>
		         </h3>
		     </div>
			         <div class="panel-body ">
			        	<samp><%= simple_format(micropost.content) %></samp>
			         </div>
		     	

		         <div class="panel-footer">
		         	<span class="glyphicon glyphicon-user"></span>
		         		<em><%= micropost.user.username %></em>
		         	<span class= "pull-right" >
		         		<span class="glyphicon glyphicon-calendar"></span>
		         		<%= micropost.user.created_at.strftime("%B %d, %Y") %> 
		         	</span>
		         </div>
		         </div>


	       <% end %>
	    </div>
	</div>
</div>
